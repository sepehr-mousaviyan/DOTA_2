      </Label>
      <Label layoutX="384.0" layoutY="426.0" prefHeight="38.0" prefWidth="199.0" text="Email Address :">
         <font>
            <Font name="Corbel" size="22.0" />
         </font>
         <effect>
            <Blend />
         </effect>
      </Label>
      <Button layoutX="333.0" layoutY="645.0" mnemonicParsing="false" onAction="#signUpAction" prefHeight="38.0" prefWidth="359.0" style="-fx-background-color: #ce502b; -fx-background-radius: 50;" text="Create Account" textFill="WHITE">
