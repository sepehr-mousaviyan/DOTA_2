         <effect>
            <ColorAdjust brightness="1.0" />
         </effect>
      </Label>
      <TextField fx:id="passInput" layoutX="356.0" layoutY="344.0" prefHeight="49.0" prefWidth="306.0" promptText="Password" style="-fx-background-color: #d5d5ed; -fx-background-radius: 30;">
