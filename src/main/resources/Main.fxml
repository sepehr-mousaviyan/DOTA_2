         <effect>
            <Blend />
         </effect>
      </Label>
      <Label fx:id="invalidRespond" contentDisplay="TOP" layoutX="229.0" layoutY="552.0" prefHeight="60.0" prefWidth="574.0" textAlignment="CENTER" textFill="RED">
